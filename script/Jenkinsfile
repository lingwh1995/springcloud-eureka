//定义项目地址
def project_url = 'https://gitee.com/lingwh1995/springcloud-eureka.git'
node {
    def mvnHome
    /*指定在那台Jenkins节点上运行*/
    agent { label '192.168.0.5'}
    /*从远程仓库检出代码*/
    stage('从远程仓库检出代码') {
        echo '开始从远程仓库检出代码...'
        checkout([
            $class: 'GitSCM',
            branches: [[name: '*/master']], extensions: [],
            userRemoteConfigs: [[url: "${project_url}"]]
        ])
        echo '完成从远程仓库检出代码...'
    }

    stage('构建代码') {
        echo 'setp 2222....'
        sh "mvn -f springcloud-api-commons clean install -U"
        sh "mvn -f springcloud-basic-sample-register-center-single-node7005 clean install -U"
        sh "mvn -f springcloud-basic-sample-provider-cluster-node-payment8010 clean install -U"
        sh "mvn -f springcloud-basic-sample-provider-cluster-node-payment8009 clean install -U"
        sh "mvn -f springcloud-basic-sample-consumer-loadbalance-openfeign-dynamic-servicename-order80 clean install -U"
    }
    stage('Results') {
        echo 'setp 3....'
    }
}